<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>2.2.0</Version>
        <Description>Peasmod</Description>
        <Authors>Peasplayer</Authors>
        <GameVersion>2021.6.30s</GameVersion>
        <LangVersion>preview</LangVersion>
    </PropertyGroup>

    <Target Name="Copy" AfterTargets="Build">
        <Copy SourceFiles="$(OutputPath)$(AssemblyName).dll" DestinationFiles="$(AmongUs)/BepInEx/plugins/$(AssemblyName)-$(GameVersion).dll" />
    </Target>

    <ItemGroup>
        <Reference Include="$(AmongUs)\BepInEx\core\*.dll">
            <Private>false</Private>
        </Reference>
        <Reference Include="$(AmongUs)\BepInEx\unhollowed\*.dll">
            <Private>false</Private>
        </Reference>
        <Reference Remove="$(AmongUs)\BepInEx\unhollowed\netstandard.dll;$(AmongUs)\BepInEx\unhollowed\Newtonsoft.Json.dll" />

        <Reference Include="$(AmongUs)\BepInEx\plugins\Reactor-$(GameVersion).dll" />
        <Reference Include="$(AmongUs)\BepInEx\plugins\Essentials-$(GameVersion).dll" />
        <Reference Include="$(AmongUs)\BepInEx\plugins\PeasAPI-$(GameVersion).dll" />
    </ItemGroup>

