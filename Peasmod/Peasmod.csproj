<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>1.7.2</Version>
        <Mappings>NuclearPowered/Mappings:0.1.2</Mappings>

        <Description>Peasnod</Description>
        <Authors>Peasplayer</Authors>
    </PropertyGroup>

    <PropertyGroup Condition="'$(GamePlatform)' == 'Steam'">
        <GameVersion>2020.12.9s</GameVersion>
        <DefineConstants>$(DefineConstants);STEAM</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(GamePlatform)' == 'Itch'">
        <GameVersion>2020.11.17i</GameVersion>
        <DefineConstants>$(DefineConstants);ITCH</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
		<None Remove="Resources\BuildVent.png" />
		<None Remove="Resources\Dot.png" />
		<None Remove="Resources\Hats\PeasMask.png" />
		<None Remove="Resources\Label.png" />
		<None Remove="Resources\Morphing.png" />
		<None Remove="Resources\Revive.png" />
		<None Remove="Resources\DragBody.png" />
		<None Remove="Resources\DropBody.png" />
		<None Remove="Resources\Hide.png" />
		<None Remove="Resources\TimeFreezing.png" />
		<None Remove="Resources\Kill.png" />
		<None Remove="Resources\Potato.png" />
	</ItemGroup>

    <ItemGroup>
        <Deobfuscate Include="$(AmongUs)\BepInEx\plugins\Reactor-$(GameVersion).dll" />
        <EmbeddedResource Include="Resources\BuildVent.png" />
		<EmbeddedResource Include="Resources\Revive.png" />
		<EmbeddedResource Include="Resources\DragBody.png" />
		<EmbeddedResource Include="Resources\DropBody.png" />
		<EmbeddedResource Include="Resources\Hide.png" />
		<EmbeddedResource Include="Resources\TimeFreezing.png" />
		<EmbeddedResource Include="Resources\Dot.png" />
		<EmbeddedResource Include="Resources\Label.png" />
		<EmbeddedResource Include="Resources\Hats\PeasMask.png" />
		<EmbeddedResource Include="Resources\Morphing.png" />
		<EmbeddedResource Include="Resources\Kill.png" />
		<EmbeddedResource Include="Resources\Potato.png" />
        <PackageReference Include="Reactor.OxygenFilter.MSBuild" Version="0.2.5" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Essentials">
        <HintPath>$(AmongUs)\BepInEx\plugins\Essentials-$(GameVersion).dll</HintPath>
      </Reference>
    </ItemGroup>

    <Target Name="Copy" AfterTargets="Reobfuscate">
        <Copy SourceFiles="$(OutputPath)reobfuscated/$(AssemblyName)-$(GameVersion).dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" Condition="'$(Configuration)' == 'Debug'" />
    </Target>
</Project>